{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ALT-ADF"
		},
		"Altra_Test_Link_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Altra_Test_Link'",
			"defaultValue": "host=dnatestdb;port=1521;sid=attst1;user id=NEXTLYTRANSACTIONS_RO"
		},
		"BusinessDataDev_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'BusinessDataDev'"
		},
		"BusinessDataQA_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'BusinessDataQA'"
		},
		"Dynamic Campaigns_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Dynamic Campaigns'",
			"defaultValue": "Integrated Security=False;Data Source=DWH-DEV.altra.org;Initial Catalog=Nextly;User ID=NextlyMarketing"
		},
		"PromoCode_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'PromoCode'",
			"defaultValue": "Integrated Security=False;Data Source=mrmprdopdb01;Initial Catalog=MRMOAO_Data;User ID=NextlyUser"
		},
		"ALTADFKeyVault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://ALTRA-KEYVAULT.vault.azure.net/"
		},
		"ls_transactiondb_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "ALTDevsql01TransactionsDev"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ALT-ADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"BusinessDataDev_connectionString": {
						"value": "[parameters('BusinessDataDev_connectionString')]"
					},
					"BusinessDataQA_connectionString": {
						"value": "[parameters('BusinessDataQA_connectionString')]"
					},
					"ALTADFKeyVault_properties_typeProperties_baseUrl": {
						"value": "[parameters('ALTADFKeyVault_properties_typeProperties_baseUrl')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "ALT-ADF_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"Altra_Test_Link_connectionString": {
						"value": "[parameters('Altra_Test_Link_connectionString')]"
					},
					"Dynamic Campaigns_connectionString": {
						"value": "[parameters('Dynamic Campaigns_connectionString')]"
					},
					"PromoCode_connectionString": {
						"value": "[parameters('PromoCode_connectionString')]"
					},
					"ls_transactiondb_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('ls_transactiondb_properties_typeProperties_connectionString_secretName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'ALT-ADF_ArmTemplate_0')]"
			]
		},
		{
			"name": "ALT-ADF_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'ALT-ADF_ArmTemplate_1')]"
			]
		}
	]
}